$(function(){

  // 大学名検索
  $('#college_search_button').on("click", function(){
    var keyword = $("#college_keyword").val();
    $.ajax({
        url: "/recruit",
        type: "GET",
        data: {
          keyword: keyword,
          request_type: "colleges",
        },
    }).done(function(data){
      $("#college_select_wrap").html(data);
      if($("#faculty_select")[0]){
        alert("test");
        $("#college_select").on("change", function(){
          var code = $("#college_select option:selected").attr("id");
          $.ajax({
              url: "/recruit",
              type: "GET",
              data: {
                code: code,
                request_type: "faculties",
              },
          }).done(function(data){
            $("#faculty_select_wrap").html(data);
          }).fail(function(){
            alert("学部取得失敗");
          });
        });
      }
    }).fail(function(){
      alert("大学取得失敗");
    });
  });
  // 大学名検索欄のクリックの対象をサブミットではなく検索に変更
  $("#college_keyword").keydown(function(e) {
    if ((e.which && e.which === 13) || (e.keyCode && e.keyCode === 13)) {
      $("#college_search_button").click();
      return false;
    }
  });

  // ハンバーガーメニューの開閉
  $('.white_back').hide();
  $('.header__menu_humberger').click(function(){
    $('.sideMenu').toggleClass('sideMenu_show');
    $('.white_back').fadeIn(300);
  });
  $('.sideMenu_close, .white_back').click(function(){
    $('.sideMenu').toggleClass('sideMenu_show');
    $('.white_back').fadeOut(300);
  });

  // ユーザー必須項目不足時
  $(".prompt").hide();
  if(!$("span#user_free")[0]) {
    $(".restricted").click(function(){
      $(".prompt").fadeIn(300);
      return false;
    });
    $(".prompt").click(function(){
      $(".prompt").fadeOut(300);
    });
  }

  // トップページの水平スクロール
  <% ["ranking", "news"].each do |id| %>
    $("#<%= id %> .arrows").on("click", function(){
      var width = $("#<%= id %> .sride-miniCard").width() * 5;
      $("#<%= id %> .sride-miniCard").animate({
        "scrollLeft": width,
      }, 1000);
    });
  <% end %>

  filereader();
  // $('.input_file').bind('change', function() {
  //   var size_in_megabytes = this.files[0].size/1024/1024;
  //   if (size_in_megabytes > 5) {
  //     alert("ファイルの最大サイズは5MBです。");
  //   }
  // });

});

function filereader(){
  <% properties =
  ["user_picture", "user_header_picture", "circle_picture", "circle_header_picture",
   "blog_picture_1", "blog_picture_2", "blog_picture_3", "event_picture"] %>
  <% properties.each do |prop| %>
    $(document).on('change', "#<%= prop %>",function(){
      var file = $(this).prop('files')[0];
        var reader = new FileReader();
        reader.readAsDataURL(file);
        reader.onload = function(e) {
          $("img.<%= prop %>").attr("src", e.target.result);
        };
    });
  <% end %>
}



