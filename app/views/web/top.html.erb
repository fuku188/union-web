<header class="header">
  <%= link_to signups_path , class: "header__background" do %>
    <div class="header__image_top" style="background-image: url(<%= asset_path('union_lp_trim.png') %>);"></div>
    <% if !logged_in? %>
      <p class="header__paragraph">新規登録・ログインはこちら</p>
    <% end %>
  <% end %>
</header>

<div class="frame">
  <h1 class="frame__heading frame__heading_underline">サークル一覧</h1>
<% if @circles.any? %>
  <ul class="frame__list ta_center">
    <% @circles.each do |circle| %>
      <li class="circle">
        <%= link_to circle do %>
          <div class="circle__background" style="background-image: url(<%= circle.header_picture %>)"></div>
          <div class="circle__image" style="background-image: url(<%= circle.picture %>)"></div>
          <p class="circle__name"><%= circle.name %></p>
          <p class="circle__genre">カテゴリ</p>
        <% end %>
      </li>
    <% end %>
  </ul>
  <!-- <a class="article__more float_right" href="">もっと見る</a> -->
<% end %>
</div>

<div class="frame">
  <h1 class="frame__heading frame__heading_underline">ブログ一覧</h1>
<% if @blogs.any? %>
  <ul class="frame__list">
    <% @blogs.each do |blog| %>
      <li class="article">
        <div class="article__image" style="background-image: url(<%= blog.picture %>)"></div>
        <%= link_to blog.title, [blog.circle, blog] , class: "article__heading" %>
        <p class="article__text">ここにテキストが入ります</p>
        <span class="article__time">日付</span>
      </li>
    <% end %>
  </ul>
  <!-- <a class="article__more float_right" href="">もっと見る</a> -->
<% end %>
</div>

<div class="frame">
  <h1 class="frame__heading">イベント一覧</h1>
<% if @events.any? %>
  <ul class="frame__list">
    <% @events.each do |event| %>
      <li class="article">
        <div class="article__image" style="background-image: url(<%= event.picture %>)"></div>
        <%= link_to event.title, [event.circle, event] , class: "article__heading" %>
        <p class="article__text">ここにテキストが入ります</p>
        <span class="article__time">日付</span>
      </li>
    <% end %>
  </ul>
  <!-- <a class="article__more float_right" href="">もっと見る</a> -->
<% end %>
</div>
