<header class="header">
  <h1 class="header__name_circle"><%= @circle.name %></h1>
  <p><%= @circle.description %></p>
  <div class="header__background"></div>
  <div class="header__photo_circle"></div>
  <div class="header__change"></div>
  <%= image_tag "menu.svg" , class: "header__menu_humberger" %>
  <%= image_tag "foot.png" , class: "header__foot" %>
</header>

  <% if @be_member %>
    <%= link_to "編集", edit_circle_path(@circle) %>
  <% end %>

  <h2>カテゴリー</h2>

  <% if @categories.any? %>
    <p>
      <% @categories.each do |category| %>
        <span><%= category.name %> | </span>
      <% end %>
    </p>
  <% end %>

<p>
  <% if @be_member %>
    <%= link_to "お問い合わせ一覧", [@circle, :contacts] %>
  <% else %>
    <%= link_to "お問い合わせ", [:new, @circle, :contact] %>
  <% end %>
</p>
<p>
  <% if @be_member %>
    <%= link_to "メンバー申請一覧", [@circle, :entries] %>
  <% else %>
    <% if !@entrying %>
      <%= link_to "メンバー申請", [@circle, :entries], method: :post %>
    <% else %>
      <%= link_to "メンバー申請キャンセル", [@circle, @entry], method: :delete %>
    <% end %>
  <% end %>
</p>


<% if @members.any? %>
  <div class="members_wrap">
    <h2>団体員(<%= @members.count %>)</h2>
    <ul>
      <% @members.each do |member| %>
        <li><%= link_to member.name, member %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="blog_wrap">
  <h2>ブログ一覧(<%= @blogs.count %>)</h2>
  <% if @blogs.any? %>
    <ul>
      <% @blogs.each do |blog| %>
        <li><%= link_to blog.title, [@circle, blog] %></li>
      <% end %>
    </ul>
  <% else %>
    <p>ブログがありません。</p>
  <% end %>

  <% if @be_member %>
    <%= link_to "ブログを作成", [:new, @circle, :blog] %>
  <% end %>
</div>

<div class="event_wrap">
  <h2>イベント一覧(<%= @events.count %>)</h2>
  <% if @events.any? %>
    <ul>
      <% @events.each do |event| %>
        <li><%= link_to event.title, [@circle, event] %></li>
      <% end %>
    </ul>
  <% else %>
    <p>イベントがありません。</p>
  <% end %>

  <% if @be_member %>
    <%= link_to "イベントを作成", [:new, @circle, :event] %>
  <% end %>
</div>

