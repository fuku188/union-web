<header>
  <h1 class="formHeading ta_center">団体作成</h1>
</header>

<div class="form">
  <%= form_for(@circle) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name , "サークル名", class: "form__item"%>
    <%= f.text_field :name , class: "form__text_field"%>

    <%= f.label :description ,"サークル概要", class: "form__item"%>
    <%= f.text_area :description , class: "form__text_area" %>

    <div class="form__item">カテゴリー選択</div>
    <% for i in 1..3 %>
      <div class="wrap_select margin_0_auto">
        <%= select :categories, ("category_"+(i).to_s).to_sym, @category_options.map{|t| [t.name, t.id]}, {include_blank: true}, {class: "selectbox"}%>
      </div>
    <% end %>

    <div class="ta_center">
      <div style="width: 100px;">
        <%= image_tag nil, class: "circle_picture"%>
      </div>
      <div class="form__upload">サークルのプロフィール画像を選択
        <%= f.file_field :picture , class: "form__file"%>
      </div>
    </div>

    <div class="ta_center">
      <div style="width: 100px;">
        <%= image_tag nil, class: "circle_header_picture"%>
      </div>
      <div class="form__upload">ヘッダー画像を選択
        <%= f.file_field :header_picture , class: "form__file"%>
      </div>
    </div>

    <div class="form__buttun ta_center">
      <%= f.submit "作成" , class: "button button_size_large button_color_blue"%>
    </div>
  <% end %>
</div>