<header>
  <h1 class="formHeading ta_center">団体作成</h1>
</header>

<div class="form">
  <%= form_for(@circle) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name , "サークル名", class: "form__item"%>
    <%= f.text_field :name , class: "form__text_field"%>

    <%= f.label :description ,"サークル概要", class: "form__item"%>
    <%= f.text_area :description , class: "form__text_area" %>

    <div class="form__buttun ta_center">
      <%= f.submit "作成" , class: "button button_size_large button_color_blue"%>
    </div>
  <% end %>
</div>