<header class="header">
	<div class="header__background">
		<%= image_tag @blog.picture.url %>
	</div>
	<div class="author">
		<div class="author__image"></div>
		<div class="author__name">投稿者：<%= link_to @author.name, @author %></div>
		<div class="author__circle">サークル：<%= link_to @circle.name, @circle %></div>
	</div>
</header>
<h1><%= @blog.title %></h1>
<p><%= @blog.content %></p>

<div style="width: 30%;">
  <%= image_tag @blog.picture.url %>
</div>

<% if @author == current_user %>
  <%= link_to "編集", [:edit, @circle, @blog] %>
<% end %>

<p>投稿者：<%= link_to @author.name, @author %></p>
<p>サークル：<%= link_to @circle.name, @circle %></p>