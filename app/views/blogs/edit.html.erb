<%= form_for(@blog) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.submit "更新" %>
<% end %>
<%= link_to "このブログを削除", blog_path(@blog), method: :delete, data: { confirm: "本当に削除しますか？" } %>