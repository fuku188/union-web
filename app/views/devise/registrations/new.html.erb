<header>
    <h1 class="formHeading ta_center">新規アカウント登録</h1>
</header>

<div class="form">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%# devise_error_messages! %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :email , class: "form__item" %>
      <%= f.email_field :email, autofocus: true , class: "form__text_field" %>

      <%= f.label :password , "パスワード(6文字以上)" , class: "form__item" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" , class: "form__text_field" %>

      <%= f.label :password_confirmation ,"確認用パスワード", class: "form__item" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form__text_field" %>

      <div class="form__button">
        <%= f.submit "登録" , class: "button button_size_large button_color_blue" %>
      </div>
  <% end %>

</div>

<div class="ta_center">
<%= link_to "確認メールが届かない方こちら", new_confirmation_path(resource_name) , class: "links__text"%>
</div>
<%# render "devise/shared/links" %>
