<header class="formHeading ta_center">
  <h1>ログイン</h1>
</header>

<div class="form">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email , class: "form__item" %>
    <%= f.email_field :email, autofocus: true , class: "form__text_field" %>

    <%= f.label :password , class: "form__item" %>
    <%= f.password_field :password, autocomplete: "off" , class: "form__text_field" %>

  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end -%>

  <div class="form__button">
    <%= f.submit "ログイン" , class: "button button_size_large button_color_blue" %>
  </div>

  <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %>

</div>
<% end %>

