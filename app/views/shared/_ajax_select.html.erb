<% elements = [] if elements.nil? %>

<% if request_type == "colleges" %>
  <% prompt = elements.present? ? "大学を選択" : "" %>
  <%= select_tag :college, options_for_select(elements.map{|college|[college["name"], college["name"], {id: college["code"]} ]}),
      {prompt: prompt, class: "selectbox", id: "college_select"} %>

<% elsif request_type == "faculties" %>
  <% prompt = elements.present? ? "学部を選択" : "" %>
  <%= select_tag :faculty, options_for_select(elements.map{|faculty|[faculty["name"], faculty["name"]]}),
      {prompt: prompt, class: "selectbox", id: "faculty_select"} %>
<% end %>