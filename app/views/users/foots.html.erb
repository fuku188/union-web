<header>
  <h1 class="heading ta_center">足跡</h1>
</header>

<div class="list__wrap">
  <% if @user.favorites.any? %>
    <ul>
      <% @user.favoriting_circles.each do |circle| %>
          <li class="list"><%= link_to circle.name, circle , class: "list__name"%>
            <div class="list__image" style="background-image: url(<%= circle.picture %>)"></div>
            <div class="list__subhead">
              <% if circle.categories.present? %>
              <%= circle.categories.first.name %>
              <% end %>
            </div>
      </li>
      <% end %>
    </ul>
  <% end %> 
</div>