<header>
  <h1 class="heading ta_center">足跡</h1>
</header>

<div class="list__wrap">
  <% if @foots.any? %>
    <ul>
      <% @foots.each do |foot| %>
        <% user = foot.footer_user %>
        <li class="list"><%= link_to user.name, user, class: "list__name" %>
        <div class="list__image" style="background-image: url(<%= user.picture %>)"></div>
        <div class="list__subhead"><%= user.college %></div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>