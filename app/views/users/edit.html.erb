<header>
  <h1 class="formHeading ta_center">プロフィール編集</h1>
</header>

<div class="form">
  <%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <% if @edit_item %>
    <% if @edit_item != "categories" %>
      <%= f.label @edit_item %>
      <%= f.text_area @edit_item %>
      <%= f.hidden_field :edit_item, :value => @edit_item %>
    <% else %>
      <% @category_ids.each_with_index do |id, i| %>
        <div class="select">
          <%= select :categories, ("category_"+(i+1).to_s).to_sym, @category_options.map{|t| [t.name, t.id]}, selected: id, include_blank: true , class: "select__choice"%>
          <div class="select__choice_top">タップして選択</div>
          <script>
            jQuery(function(){
                jQuery("select#sentakushi_form").change(function(){
                    jQuery("div#sentakushi_form2").text(jQuery("option:selected",this).text());
                }).trigger("change");
            });
          </script>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <%= f.label :name, "名前" , class: "form__item" %>
    <%= f.text_field :name , class: "form__text_field" %>

    <%= f.label :sex, "性別" , class: "form__item" %>
    <%= f.select :sex, {"男性" => 0, "女性" => 1}, selected: @user.id, include_blank: true, class: "" %>

    <%= f.label :college, "大学" , class: "form__item" %>
    <%= f.text_field :college , class: "form__text_field" %>

    <%= f.label :department, "学部" , class: "form__item form__item_number" %>
    <%= f.text_field :department , class: "form__text_field form__text_field_short" %>

    <%= f.label :grade, "学年" , class: "form__item" %>
    <%= f.select :grade, ["1", "2", "3", "4", "修士1", "修士2", "その他"], class: "form__text_field form__text_field_short" %>

    <div class="form__images ta_center">
      <!--<%= f.label :picture, "プロフィール画像" , class: "form__item"%>-->
      <div>
        <% if @user.picture %>
          <%= image_tag @user.picture.url, class: "user_picture"%>
        <% else %>
          <%= image_tag class: "user_picture"%>
        <% end %>
      </div>
      <div class="form__upload">プロフィール画像を選択
        <%= f.file_field :picture , class: "form__file"%>
      </div>
    </div>

    <div class="form__images ta_center">
      <!--<%= f.label :header_picture, "ヘッダー画像" , class: "form__item"%>-->
      <div class="ta_center">
        <% if @user.header_picture %>
          <%= image_tag @user.header_picture.url, class: "user_header_picture"%>
        <% else %>
          <%= image_tag class: "user_header_picture"%>
        <% end %>
      </div>
      <div class="form__upload">ヘッダー画像を選択
        <%= f.file_field :header_picture, class: "form__file"%>
      </div>
    </div>

  <% end %>

    <div class="form__button">
      <%= f.submit "更新" , class: "button button_size_large button_color_blue"%>
    </div>
  <% end %>
</div>
