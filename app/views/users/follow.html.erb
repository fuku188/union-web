<header>
	<h1 class="formHeading ta_center"><%= @title %></h1>
</header>

<div class="list__wrap">
	<% if @users.any? %>
  	<ul>
    	<% @users.each do |user| %>
    		<li class="thinCard">
        <%= link_to user , class: "wrap__link" do %>
          <div class="thinCard__heading"><%= user.name %></div>
    			<div class="thinCard__image" style="background-image: url(<%= user.picture %>)"></div>
    			<div class="thinCard__subhead"><%= user.college %>
          <% if user.grade.present? && user.grade > 0 %>
            / <%= user.grade %>
          <% end %>
          </div>
        <% end %> 
    		</li>
      <% end %>
  	</ul>
	<% end %>
</div>