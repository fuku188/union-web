<div class="follow">
  <ul class="follow__wrap">
    <% if user_signed_in? && current_user?(@user) %>
      <li class="follow__list follow__list_border_right">
        <%= link_to [:edit, @user] , class: "follow__link" do %>
          <%= image_tag 'setting_prof.svg' , class: "follow__list_icon"%>
        <% end %>
      </li>
    <% end %>
    <li class="follow__list follow__list_border_right">
      <%= link_to [:following, @user] , class: "follow__link link_fill" do %>
        <div id="following_count" class="follow__number" ><%= @user.following.count %></div>フォロー
      <% end %>
    </li>
    <li class="follow__list follow__list_border_right">
      <%= link_to [:followers, @user] , class: "follow__link link_fill" do %>
        <div id="followers_count" class="follow__number" ><%= @user.followers.count %></div>フォロワー
      <% end %>
    </li>
    <li class="follow__list">
      <%= link_to [:favorites, @user] , class: "follow__link link_fill" do %>
        <div id="favorites_count" class="follow__number" ><%= @user.favorites.count %></div>気になる
      <% end %>
    </li>
  </ul>
</div>

<!-- 入ってるサークルの情報 -->
<section class="frame">
  <% if @user.circles.any? %>
    <div class="frame__heading">所属サークル</div>
  <% end %>
  <ul class="wrap_belong">
    <% @user.circles.each do |circle| %>
      <li class="belong">
        <%= link_to circle do %>
          <div class="belong__image c_picture" style="background-image: url(<%= circle.picture %>)"></div>
          <div class="belong__heading"><%= circle.name %></div>
          <div class="belong__description"><%= circle.description %></div>
        <% end %>
      </li>
    <% end %>
  </ul>
</section>

<section class="user__body">

  <% @profiles.each do |key, value| %>
    <div class="introduce">
      <h1 class="introduce__heading"><%= value %></h1>
      <% if key != :categories %>
        <p class="introduce__text"><%= simple_format(h(@user[key])) %></p>
      <% else %>
        <% @user.categories.each do |category| %>
          <p class="introduce__text"><%= category.name %></p>
        <% end %>
      <% end %>
      <% if current_user?(@user) %>
        <div class="introduce__btn">
          <%= link_to '編集', [:edit, @user, edit_item: key], class: "button button_size_small button_color_white" %>
        </div>
      <% end %>
    </div>
  <% end %>

</section>

<div class="alert">
  <div class="alert__box">
    <p class="alert__text">メッセージを送るには、相互にフォローしている必要があります。</p>
    <button class="alert__button button button_size_medium button_color_blue">OK</button>
    <%= image_tag 'close.svg' , class: "prompt__close"%>
  </div>
</div>

</div>

<div class="user__image_zoom">
  <!-- <div>プロフィール画像</div> -->
  <div class="user__image c_picture" style="background-image: url(<%= @user.picture %>);"></div>
  <%= link_to "プロフィール編集", [:edit, @user] , class: "button button_border"%>
  <p class="button button_border">閉じる</p>
</div>

