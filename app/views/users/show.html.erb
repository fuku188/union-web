<% if user_signed_in? %>
  <% if !current_user.mutual_follow?(@user) %><span id="mutual_follow"></span><% end %>
  <% if current_user?(@user) %><span id="current_user"></span><% end %>
<% end %>
<script type="text/javascript">
  $(function(){

    var mutual_follow = $("span#mutual_follow")[0];
    var current_user  = $("span#current_user")[0];

    // 相互フォローでない人にメッセージを送ろうとした場合のポップアップ
    $(".alert").hide();
    if (mutual_follow) {
      $(".header__message").click(function(){
        $(".alert").fadeIn(300);
        return false;
      });
      $(".alert").click(function(){
        $(".alert").fadeOut(300);
      });
    }

    // 個人ページ、プロフィール画像からの編集
    $(".user__image_zoom").hide();
    if (current_user) {
      $(".header__photo_user").click(function(){
        $(".user__image_zoom").fadeIn(100);
      });
      $(".user__image_zoom").click(function(){
        $(".user__image_zoom").fadeOut(100);
      });
    }
  });
</script>

<div class="whole_wrap">

<% if current_user?(@user) %>
  <div class="body_wrap"></div>
  <div class="sideMenu">
    <ul class="sideMenu__lists">
      <li class="sideMenu__item sideMenu_close">閉じる</li>
      <li class="sideMenu__item"><%= link_to "プロフィール編集", [:edit, @user] %></li>
      <li class="sideMenu__item restricted"><%= link_to "新規団体登録", [:new, :circle], class: "create_circle_btn"%></li>
      <li class="sideMenu__item"><%= link_to "その他", [:rest, @user] %></li>
    </ul>
  </div>
<% end %>

<header class="header">
  <div class="header__background c_picture" style="background-image: url(<%= @user.header_picture %>)"></div>
  <div class="header__photo_circle c_picture" style="background-image: url(<%= @user.picture %>);"></div>
  <h1 class="header__name_circle"><%= @user.name %></h1>
  <p class="header__subhead_user"><%= @user.basic_info %></p>
  <% if current_user?(@user) %>
    <%= image_tag "menu.svg" , class: "header__menu_humberger" %>
    <div class="header__foot">
      <%= link_to image_tag("foot.png"), [:foots, @user], class: "foot" %>
      <% if user_signed_in? && current_user.new_foots_count && 0 < current_user.new_foots_count %>
        <div class="header__notice"><%= current_user.new_foots_count %></div>
      <% end %>
    </div>
  <% end %>
  <div class="message_follow">
    <% if user_signed_in? && !current_user?(@user) %>
      <div id="follow_form" class="restricted">
        <%= render !current_user.following?(@user) ? "follow" : "unfollow" %>
      </div>
      <% if current_user.mutual_follow?(@user) %>
        <%= link_to image_tag("message_blue.svg"), [:new, :message_room, user_id: @user.id], class: "header__message" %>
      <% else %>
        <%= image_tag("message_blue.svg", class: "header__message") %>
      <% end %>
    <% end %>
  </div>
</header>

